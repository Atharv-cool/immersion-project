<!DOCTYPE html>
<html>
<head>
  <title>Vehicles</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-4">
    <h1 class="mb-4">Add Vehicle</h1>

    <form action="/add" method="POST" class="row g-3 mb-5">
      <div class="col-md-4">
        <input name="vehicleName" class="form-control" placeholder="Name" required />
      </div>
      <div class="col-md-4">
        <input name="price" class="form-control" placeholder="Price" required />
      </div>
      <div class="col-md-4">
        <input name="image" class="form-control" placeholder="Image URL" required />
      </div>
      <div class="col-md-6">
        <input name="desc" class="form-control" placeholder="Description" required />
      </div>
      <div class="col-md-6">
        <input name="brand" class="form-control" placeholder="Brand" required />
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-primary">Add Vehicle</button>
      </div>
    </form>

    <h2 class="mb-3">Vehicle List</h2>

    <div class="row">
      <% vehicles.forEach(v => { %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm">
            <img src="<%= v.image %>" class="card-img-top" alt="Vehicle" onerror="this.src='https://via.placeholder.com/200x120?text=No+Image';" style="height:200px;object-fit:cover;">
            <div class="card-body">
              <h5 class="card-title"><%= v.vehicleName %> - â‚¹<%= v.price %></h5>
              <p class="card-text"><%= v.desc %></p>
              <p><span class="badge bg-secondary"><%= v.brand %></span></p>
              <form action="/delete/<%= v.id %>" method="POST" class="d-inline">
                <button class="btn btn-danger btn-sm">Delete</button>
              </form>
              <a href="/edit/<%= v.id %>" class="btn btn-warning btn-sm">Edit</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
